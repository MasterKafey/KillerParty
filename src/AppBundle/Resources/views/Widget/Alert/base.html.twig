{% set messages = console_util.messages %}

{% if messages is not empty or form is defined %}
    <div class="dyosis-alert-box">
        {% for key,message in messages %}
            <div id="dyosis-alert-{{ key }}" class="dyosis-alert dyosis-alert-{{ message.type }}">
                <div class="row align-items-center h-100">
                    <div class="col-xs-4 mx-auto text-center">
                        <i class="{{ message.icon }} fa-4x"></i>
                    </div>
                    <div class="col-xs-8 alert-text mx-auto">
                        <p>
                            {{ message.text }}
                        </p>
                        <button class="pull-right btn alert-button"
                                onclick="document.getElementById('dyosis-alert-{{ key }}').style.opacity='0';">Fermer
                        </button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endif %}